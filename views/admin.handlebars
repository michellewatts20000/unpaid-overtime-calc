<div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 mx-auto text-center p-5">
    <nav class="navbar navbar-expand-lg navbar-light navbar-right mb-2">
        <div class="container navbar-right">
            {{#if logged_in}}
            <button class="btn btn-danger btn-sm" id="logout">Logout</button>
            <a class="btn btn-info btn-sm" href="./csv">Download CSV</a>
            {{else}}
            <a class="btn btn-info btn-sm" href="/login">Admin Login</a>
            {{/if}}
        </div>
    </nav>
    <h1 class="text-white mb-5">Free time <span style="text-decoration:underline; color: #5CE1E6;">not</span>
        free work.
    </h1>
    <table id="table" class="table text-white">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Industry</th>
                <th scope="col">Lunch</th>
                <th scope="col">Unpaid Hours</th>
                <th scope="col">Unpaid Salary</th>
            </tr>
        </thead>
        <tbody>
            {{#each users as | user |}}
            <tr>
                <td>{{user.id}}</td>
                <td>{{user.email}} </td>
                <td>{{user.industry}}</td>
                <td>{{user.lunch}}</td>
                <td>{{user.unpaidHours}}</td>
                <td>{{user.unpaidSalary}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>



    <table id="table2" class="table text-white">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Industry</th>
                <th scope="col">Unpaid Salary</th>
            </tr>
        </thead>
        <tbody>
            {{#each users as | user |}}
            <tr>
                <td scope="row">{{user.id}}</td>
                <td>{{user.industry}}</td>
                <td>{{user.unpaidSalary}}</td>
            </tr>

            {{/each}}
        </tbody>
    </table>